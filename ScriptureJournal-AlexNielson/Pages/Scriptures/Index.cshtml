<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureJournal[0].Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureJournal[0].ChapterNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureJournal[0].VerseNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureJournal[0].DateAdded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureJournal[0].Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ScriptureJournal)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Book)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChapterNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VerseNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateAdded)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
